<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="697.0" prefWidth="967.0" style="-fx-background-color: rgba(48, 48, 77, 0.1);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musigma.controllers.workspaces.HomeController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nom du festival" />
             <TextField fx:id="festivalName" GridPane.columnIndex="1" />

            <Label text="Date du festival" GridPane.rowIndex="1" />
             <DatePicker fx:id="festivalStart" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Emplacement du festival" GridPane.rowIndex="2" />
             <TextField fx:id="festivalLocation" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Aire de l'emplacement du festival" GridPane.rowIndex="3" />
             <TextField fx:id="festivalArea" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Prix de l'emplacement du festival" GridPane.rowIndex="4" />
            <TextField fx:id="festivalLocationPrice" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
