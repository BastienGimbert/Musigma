<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="720.0" prefWidth="1121.0" styleClass="window" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musigma.controllers.MainController">
    <VBox prefHeight="720.0" prefWidth="64.0">
        <children>
            <Pane maxWidth="1.7976931348623157E308">
                <children>
                    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-background-color: #30304d;">
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                            <Image url="@../images/logo.png" />
                        </ImageView>
                    </HBox>
                </children>
            <padding>
               <Insets bottom="1.0" />
            </padding>
            </Pane>
            <VBox fx:id="pageMenu" alignment="TOP_CENTER" prefHeight="685.0" prefWidth="114.0" spacing="20" style="-fx-background-color: #30304d;" VBox.vgrow="ALWAYS">
                <padding>
                   <Insets top="20.0" />
                </padding>
            </VBox>
        </children>
    </VBox>
    <VBox prefHeight="556.0" prefWidth="994.0" HBox.hgrow="ALWAYS">
        <children>
            <GridPane maxHeight="-Infinity" onMousePressed="#dragWindow" prefHeight="25.0" prefWidth="903.0" styleClass="windowBar">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="583.0" minWidth="10.0" prefWidth="577.0" />
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <HBox prefHeight="63.0" prefWidth="581.0">
                    <MenuBar prefHeight="27.0" prefWidth="280.0">
                        <Menu mnemonicParsing="false" text="File">
                            <MenuItem mnemonicParsing="false" text="Close" />
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <MenuItem mnemonicParsing="false" text="Delete" />
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <MenuItem mnemonicParsing="false" text="About" />
                        </Menu>
                        <padding>
                            <Insets left="-5.0E-5" />
                        </padding>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                    </MenuBar>
                </HBox>
                <HBox alignment="TOP_RIGHT" prefHeight="63.0" prefWidth="337.0" GridPane.columnIndex="1">
                    <Button onAction="#minimizeWindow">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/minimize.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button onAction="#closeWindow" styleClass="close">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../images/close.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </GridPane>
            <Pane fx:id="workspace" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
        </children>
    </VBox>
</HBox>
